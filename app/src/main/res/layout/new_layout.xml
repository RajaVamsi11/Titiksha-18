<com.github.captain_miao.optroundcardview.OptRoundCardView
    android:id="@+id/top_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:optRoundCardCornerRadius="16dp"
    android:alpha="0.7"
    app:optRoundCardLeftBottomCorner="true"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/darker_gray"
    android:elevation="3dp"
    app:optRoundCardRightBottomCorner="true"
    app:optRoundCardRightTopCorner="true"
    app:optRoundCardBottomEdges="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/card_edge">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvEventName"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Counter Strike"
                    android:textSize="20sp"
                   />

                  <TextView
                      android:id="@+id/tvEventType"
                      android:textColor="@android:color/white"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="8dp"
                      android:layout_alignParentRight="true"
                      android:layout_marginTop="8dp"
                      android:text="INFORMAL"
                      android:textSize="20sp"
                       />
              </RelativeLayout>
            </FrameLayout>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_below="@id/frameLayout"
                android:layout_width="match_parent"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Time : "
                android:textSize="18sp"
               />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/textView9"
                android:text="Location:"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_centerHorizontal="true"
                android:text="Co-Ordinators:"
                android:textSize="18sp"
                android:layout_below="@id/textView10" />
            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="92dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="21:00 -22:00"
                android:layout_alignParentRight="true"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvEventTime"
                android:layout_marginTop="4dp"
                android:text="Lecture Hall-2"
                android:textSize="18sp"
                 />
            <TextView
                android:id="@+id/tvEventCoordinators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/textView11"
                android:layout_alignParentRight="true"
                android:text="Azmi Abdul Wadood Shakeel Ahmed, Dundi Raja Vamsi Reddy"
                android:textSize="18sp" />
            </RelativeLayout>
            </RelativeLayout>


</com.github.captain_miao.optroundcardview.OptRoundCardView>

